###############################################################################
# This Make include file specifies all the MPI specific variables required
# by the Benchmark CD. It is included via the Makefile.include file.
#
# This is the Makefile that was used during compilation of the benchmark CD on
# AWE systems using OpenMPI version 1.4.2.
#
# See Makefile.include for meanings of the variables.
###############################################################################

MPIFC  = mpif90 $(LIBDIR)$(BBM) $(LIB)numa
MPICC  = mpicc $(LIBDIR)$(BBM) $(LIB)numa
MPICXX = mpicxx $(LIBDIR)$(BBM) $(LIB)numa

_BBM_MPI_REAL2 =

PMTM_MPI_VENDOR  := "OpenMPI_Forum"
PMTM_MPI_NAME    := "OpenMPI"
PMTM_MPI_VERSION := "1.4.2"

# MPI fortran stdlib
FSTDLIBS += $(LIB)mpi_f77

